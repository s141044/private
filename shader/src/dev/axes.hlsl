
#ifndef DEV_AXES_HLSL
#define DEV_AXES_HLSL

///////////////////////////////////////////////////////////////////////////////////////////////////

cbuffer axes_cbuffer
{
	float4x3	view_proj_mat;
};

///////////////////////////////////////////////////////////////////////////////////////////////////

struct vs_output
{
	float4	sv_position				: SV_POSITION;
	nointerpolation float3	color	: COLOR;
};

///////////////////////////////////////////////////////////////////////////////////////////////////

vs_output draw_axes_vs(uint vertex_id : SV_VertexID, uint instance_id : SV_InstanceID)
{
	float3 pos = 0;
	pos[instance_id] = vertex_id;

	float3 col = 0;
	col[instance_id] = 1;

	vs_output output;
	output.sv_position.xyz = mul(float4(pos, 1), view_proj_mat);
	output.sv_position.w = 1;
	output.color = col;
	return output;
}

///////////////////////////////////////////////////////////////////////////////////////////////////

float3 draw_axes_ps(vs_output input) : SV_TARGET
{
	return input.color;
}

///////////////////////////////////////////////////////////////////////////////////////////////////

#endif
